  "description": "A demo service for cg",
  "main": "src/main.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Wagan8r/cg-trainer-service.git"
  },
  "author": "Wagan8r",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Wagan8r/cg-trainer-service/issues"
  },
  "homepage": "https://github.com/Wagan8r/cg-trainer-service#readme",
  "dependencies": {
    "@nestjs/common": "^8.0.6",
    "@nestjs/config": "^1.0.1",
    "@nestjs/core": "^8.0.6",
    "@nestjs/platform-express": "^8.0.6",
    "@nestjs/typeorm": "^8.0.2",
    "@types/node-fetch": "^2.5.12",
    "class-transformer": "^0.4.0",
    "class-validator": "^0.13.1",
    "dotenv": "^10.0.0",
    "pg": "^8.7.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.3.0",
    "typeorm": "^0.2.37",
    "typeorm-test-transactions": "^1.14.2",
    "typeorm-transactional-cls-hooked": "^0.1.21",
    "typescript": "^4.3.5"
  },
  "devDependencies": {
    "@nestjs/cli": "8.1.1",
    "@nestjs/schematics": "8.0.2",
    "@nestjs/testing": "8.0.6",
    "@types/express": "4.17.13",
    "@types/jest": "27.0.1",
    "@types/node": "16.6.2",
    "@types/supertest": "2.0.11",
    "@typescript-eslint/eslint-plugin": "4.29.2",
    "@typescript-eslint/parser": "4.29.2",
    "eslint": "7.32.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-import": "2.24.1",
    "eslint-plugin-prettier": "4.0.0",
    "jest": "^27.0.6",
    "jest-junit": "12.2.0",
    "prettier": "2.3.2",
    "supertest": "6.1.6",
    "ts-jest": "27.0.5",
    "ts-loader": "9.2.5",
    "ts-node": "10.2.1",
    "tsconfig-paths": "3.10.1",
    "uuid": "8.3.2"
  },
  "scripts": {
    "build": "nest build",
    "docker:build": "docker build -t cg-trainer-service .",
    "docker": "docker-compose up -d && docker-compose logs -f",
    "docker:down": "docker-compose down",
    "lint": "eslint 'src/**/*.ts' 'test/**/*.ts'",
    "lint:fix": "npm run lint -- --fix",
    "prebuild": "rimraf dist",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/src/main",
    "tsc": "tsc",
    "test": "npm run lint && tsc -p tsconfig.json && jest --logHeapUsage --coverage",
    "test:ci": "npm run migration:run && npm run test",
    "test:migration": "jest --config jest.config.migration.js",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js --config src/cli/type-orm-config.ts",
    "typeorm:prod": "./node_modules/typeorm/cli.js --config dist/src/cli/type-orm-config.js",
    "migration:create": "npm run typeorm migration:create -- -n",
    "migration:run": "npm run typeorm migration:run -- -t=false",
    "migration:run:prod": "npm run typeorm:prod migration:run -- -t=false",
    "migration:revert": "npm run typeorm migration:revert -- -t=false"
  }
}
